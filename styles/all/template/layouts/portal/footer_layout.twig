					{% if S_EDIT_MODE %}
						{% set editable = ' editable' %}
						{% set block_controls %}
							<div class="block-controls">
								<a href="#" class="item-action delete-block" title="{{ lang('DELETE') }}"><span class="ui-icon ui-icon-closethick">{{ lang('DELETE') }}</span></a>
								<a href="#" class="item-action edit-block" title="{{ lang('EDIT') }}"><span class="ui-icon ui-icon-gear">{{ lang('EDIT') }}</span></a>
							</div>
						{% endset %}
					{% endif %}
						<div class="clear"></div>
					</div>
					{% if positions.boxes or S_EDIT_MODE %}
						{% set num_blocks = positions.boxes|length %}
						{% if num_blocks is divisible by(3) %}
							{% set divisor = 3 %}
						{% elseif num_blocks is divisible by(2) %}
							{% set divisor = 2 %}
						{% elseif num_blocks > 3 %}
							{% set divisor = 3 %}
						{% else %}
							{% set divisor = 1 %}
						{% endif %}
					<div id="pos-boxes" class="block-position horizontal equal grid">
						{% for block in positions.boxes %}
						<div id="block-{{ block.bid }}" class="block grid__col {{ divisor > 1 ? 'grid__col--1-of-' ~ divisor : 'grid__col--5-of-5' }}">
							{% include 'layouts/blocks/' ~ (block.view ? block.view : 'simple') ~ '_view.twig' %}
							{{ block_controls }}
						</div>
						{% endfor %}
					</div>
					{% endif %}

					{% if positions.bottom or S_EDIT_MODE %}
					<div class="grid">
						<div id="pos-bottom" class="grid__col grid__col--5-of-5 block-position">
							{% for block in positions.bottom %}
							<div id="block-{{ block.bid }}" class="block">
								{% include 'layouts/blocks/' ~ (block.view ? block.view : 'simple') ~ '_view.twig' %}
								{{ block_controls }}
							</div>
							{% endfor %}
						</div>
					</div>
					{% endif %}
				</div>

				{% if positions.subcontent or S_EDIT_MODE %}
				<div id="pos-subcontent" class="block-position grid__col grid__col--1-of-4 sidebar sidebar-right">
					{% for block in positions.subcontent %}
					<div id="block-{{ block.bid }}" class="block">
						{% include 'layouts/blocks/' ~ (block.view ? block.view : 'simple') ~ '_view.twig' %}
						{{ block_controls }}
					</div>
					{% endfor %}
				</div>
				{% endif %}
			</div>
			{% if positions.bottom_hor or S_EDIT_MODE %}
				{% set divisor = 0 %}
				{% set columns_per_row = 3 %}
				{% set num_blocks = positions.bottom_hor|length %}
			<div class="grid">
				<div id="pos-bottom_hor" class="block-position horizontal">
				{% for block in positions.bottom_hor %}
					{% if divisor == 0 %}
						{% if loop.revindex is divisible by (3) or loop.revindex > 2 %}
							{% set divisor = 3 %}
						{% elseif loop.revindex is divisible by (2) %}
							{% set divisor = 3 %}
							{% set columns_per_row = 2 %}
						{% else %}
							{% set divisor = 1 %}
							{% set columns_per_row = 1 %}
						{% endif %}
					{% endif %}
					<div id="block-{{ block.bid }}" class="block grid__col {% if columns_per_row > 1 %}grid__col--1-of-{{ columns_per_row }}{% else %}grid__col--3-of-3{% endif %}">
						{% include 'layouts/blocks/' ~ (block.view ? block.view : 'simple') ~ '_view.twig' %}
						{{ block_controls }}
					</div>
					{% if loop.index is divisible by(divisor) && !loop.last %}
						{% set divisor = 0 %}
					{% endif %}
				{% endfor %}
				</div>
			</div>
			{% endif %}
		</div>
	</div>

	{% if positions.footer or S_EDIT_MODE %}
	<div class="footer">
		<div id="pos-footer" class="panel bg3 block-position horizontal equal grid">
			{% set num_blocks = positions.footer|length %}
			{% if num_blocks is divisible by(3) %}
				{% set divisor = 3 %}
			{% elseif num_blocks is divisible by(2) %}
				{% set divisor = 2 %}
			{% elseif num_blocks > 3 %}
				{% set divisor = 3 %}
			{% else %}
				{% set divisor = 1 %}
			{% endif %}

			{% for block in positions.footer %}
			<div id="block-{{ block.bid }}" class="block grid__col {{ divisor > 1 ? 'grid__col--1-of-' ~ divisor : 'grid__col--5-of-5' }}">
				{% include 'layouts/blocks/' ~ (block.view ? block.view : 'simple') ~ '_view.twig' %}
				{{ block_controls }}
			</div>
			{% endfor %}
		</div>
	</div>
	{% endif %}
</div>
